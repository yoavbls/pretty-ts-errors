{
  "name": "pretty-ts-errors",
  "displayName": "Pretty TypeScript Errors",
  "publisher": "yoavbls",
  "description": "Make TypeScript errors prettier and more human-readable in VSCode",
  "version": "0.3.0",
  "icon": "assets/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/yoavbls/pretty-ts-errors"
  },
  "homepage": "https://github.com/yoavbls/pretty-ts-errors",
  "engines": {
    "vscode": "^1.77.0"
  },
  "categories": [
    "Programming Languages",
    "Debuggers",
    "Visualization",
    "Other"
  ],
  "galleryBanner": {
    "color": "#133b55",
    "theme": "dark"
  },
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:javascript",
    "onLanguage:typescriptreact",
    "onLanguage:javascriptreact",
    "onLanguage:astro",
    "onLanguage:svelte",
    "onLanguage:vue",
    "onLanguage:mdx"
  ],
  "main": "./dist/extension.js",
  "files": [
    "out"
  ],
  "contributes": {
    "languages": [
      {
        "id": "type",
        "extensions": [
          ".type"
        ]
      }
    ],
    "grammars": [
      {
        "language": "type",
        "scopeName": "source.type",
        "path": "./syntaxes/type.tmGrammar.json"
      }
    ]
  },
  "scripts": {
    "setup": "npm list -g --depth 0 && npm ci --legacy-peer-deps && npm list",
    "vscode:prepublish": "npm run package",
    "compile": "node scripts/build",
    "watch": "npm run compile -- --watch",
    "build": "vsce package",
    "package": "node scripts/build -- --production",
    "prepack": "npm run compile-src",
    "compile-src": "tsc -p .",
    "watch-src": "tsc -p . -w",
    "pretest": "npm run compile-src && npm run compile",
    "test": "node ./out/test/runTest.js",
    "lint": "eslint src --ext ts & tsc --noEmit",
    "workflow_test": "xvfb-maybe npm test && npm publish --dry-run",
    "workflow_publish": "npm publish --access=public pretty-ts-errors-*.tgz"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/lz-string": "^1.3.34",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/prettier": "^2.7.2",
    "@types/vscode": "^1.70.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/test-electron": "^2.1.5",
    "@vscode/vsce": "^2.19.0",
    "esbuild": "^0.17.16",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^5.0.4",
    "xvfb-maybe": "^0.2.1"
  },
  "dependencies": {
    "lz-string": "^1.4.4",
    "prettier": "^2.8.7",
    "ts-dedent": "^2.2.0",
    "vscode-languageclient": "^8.1.0",
    "vscode-languageserver-types": "^3.17.3",
    "vscode-uri": "^3.0.7"
  }
}
