{
  "private": true,
  "name": "@pretty-ts-errors/diagnostics-l10n",
  "description": "A tool to generate & distribute lookup tables for diagnostic messages to locales that are supported by the TypeScript compiler.",
  "files": [
    "dist/**"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "exports": {
    "require": "./dist/index.cjs",
    "import": "./dist/index.js"
  },
  "scripts": {
    "build": "tsdown src/index.ts --format cjs,esm --unbundle --dts",
    "dev": "tsdown src/index.ts --format cjs,esm --unbundle --dts --watch",
    "lint": "tsc -p . --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "generate": "node scripts/create-diagnostic-maps.js",
    "annotate": "node scripts/annotate-diagnostic-maps.js"
  },
  "tsdown": {
    "hash": false
  },
  "devDependencies": {
    "tsdown": "^0.15.9",
    "vitest": "^3.2.4"
  }
}